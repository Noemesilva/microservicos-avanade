{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "inventory": {
        "ClusterId": "inventory-cluster",
        "Match": { "Path": "/inventory/{**catch-all}" }
      },
      "sales": {
        "ClusterId": "sales-cluster",
        "Match": { "Path": "/sales/{**catch-all}" }
      }
    },
    "Clusters": {
      "inventory-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5118/" }
        }
      },
      "sales-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5081/" }
        }
      }
    }
  },
  "Jwt": {
    "Issuer": "Avanade.Gateway",
    "Audience": "Avanade.Apis",
    "Key": "super_secret_dev_key_change_me_please_12345"
  }
}
